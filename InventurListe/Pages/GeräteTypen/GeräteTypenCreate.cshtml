@page
@model InventurListe.Pages.GeräteTypen.GeräteTypenCreateModel
@{
}

<br />
<h2 class="text-info">Neuer Geräte Typ</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <!--GerätTyp-->
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="GeräteTyp.GerätTyp">GeräteTyp (PC, Laptop, Drucker etc.)</label>
            </div>
            <div class="col-6">
                <input asp-for="GeräteTyp.GerätTyp" class="form-control" />
            </div>
            <span asp-validation-for="GeräteTyp.GerätTyp" class="text-danger"></span>
        </div>
        <!--Modell-->
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="GeräteTyp.Modell">Modell</label>
            </div>
            <div class="col-6">
                <input asp-for="GeräteTyp.Modell" class="form-control" />
            </div>
            <span asp-validation-for="GeräteTyp.Modell" class="text-danger"></span>
        </div>
        <!--Buttons-->
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Erstellen" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="GeräteTypenIndex" class="btn btn-success form-control">Zur Übersicht</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}