@page
@model InventurListe.Pages.Räume.RäumeCreateModel
@{
}


<br />
<h2 class="text-info">Neuer Raum</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <!--Name-->
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Raum.RaumName">Name des Raums</label>
            </div>
            <div class="col-6">
                <input asp-for="Raum.RaumName" class="form-control" />
            </div>
            <span asp-validation-for="Raum.RaumName" class="text-danger"></span>
        </div>
        <!--Buttons-->
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Erstellen" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="RäumeIndex" class="btn btn-success form-control">Zur Übersicht</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}